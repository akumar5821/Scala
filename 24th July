object Closure {
  var number = 10
  val add = (x:Int) => x+number

  def main(args:Array[String]){
     number = 1200
    println(add(10))
  }
}


object  demonstrate {
  var factor = 3;
  var multiply = (x:Int) => x * factor

  def main(args: Array[String]): Unit ={
    factor = 4
    factor = 5
    println("multiply(30) value will be: " + multiply(30))
  }

}
